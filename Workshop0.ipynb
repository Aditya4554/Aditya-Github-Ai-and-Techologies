]


def classify_study_time(time_data):
    """Return a dictionary with low, moderate, and high study hour lists."""
    categories = {"low": [], "moderate": [], "high": []}
    for study_hours, _, _ in time_data:
        if study_hours < 3:
            categories["low"].append(study_hours)
        elif 3 <= study_hours <= 5:
            categories["moderate"].append(study_hours)
        else:
            categories["high"].append(study_hours)
    return categories


def count_study_days(classifications):
    """Return counts for each study time classification."""
    return {label: len(hours) for label, hours in classifications.items()}


def convert_study_hours_to_minutes(time_data):
    """Return study minutes for each entry in time_data."""
    return [int(study_hours * 60) for study_hours, _, _ in time_data]


def analyse_average_time_use(time_data):
    """Return average study, entertainment, and sleep hours."""
    study_hours = [study for study, _, _ in time_data]
    entertainment_hours = [ent for _, ent, _ in time_data]
    sleep_hours = [sleep for _, _, sleep in time_data]
    return {
        "study_avg": mean(study_hours),
        "entertainment_avg": mean(entertainment_hours),
        "sleep_avg": mean(sleep_hours),
    }


def plot_study_vs_sleep(time_data):
    """Plot study hours against sleep hours using matplotlib."""
    try:
        import matplotlib.pyplot as plt  # type: ignore[import-not-found]
    except ModuleNotFoundError as exc:
        raise RuntimeError(
            "matplotlib is required for plotting. Install it with 'pip install matplotlib'."
        ) from exc

    study_hours = [study for study, _, _ in time_data]
    sleep_hours = [sleep for _, _, sleep in time_data]

    plt.figure(figsize=(8, 5))
    plt.scatter(study_hours, sleep_hours, color="royalblue")
    plt.title("Study vs Sleep Hours")
    plt.xlabel("Study Hours")
    plt.ylabel("Sleep Hours")
    plt.grid(True, linestyle="--", linewidth=0.5)
    plt.tight_layout()
    plt.show()


def sum_nested_list(nested_list):
    """Return the sum of all integers in a nested list."""
    total = 0
    for element in nested_list:
        if isinstance(element, list):
            total += sum_nested_list(element)
        else:
            total += element
    return total


def generate_permutations(text):
    """Return sorted list of unique permutations for the given text."""
    if len(text) <= 1:
        return [text]
    seen = set()
    result = []
    for perm in permutations(text):
        candidate = "".join(perm)
        if candidate not in seen:
            seen.add(candidate)
            result.append(candidate)
    return sorted(result)


def calculate_directory_size(directory):
    """Return total size of a nested directory structure represented by dictionaries."""
    total_size = 0
    for value in directory.values():
        if isinstance(value, dict):
            total_size += calculate_directory_size(value)
        else:
            total_size += value
    return total_size


def min_coins(coins, amount):
    """Return the minimum number of coins needed to reach amount, or -1 if impossible."""
    dp = [float("inf")] * (amount + 1)
    dp[0] = 0
    for coin in coins:
        for subtotal in range(coin, amount + 1):
            dp[subtotal] = min(dp[subtotal], dp[subtotal - coin] + 1)
    return dp[amount] if dp[amount] != float("inf") else -1


def longest_common_subsequence(first, second):
    """Return the length of the longest common subsequence between two strings."""
    rows = len(first) + 1
    cols = len(second) + 1
    dp = [[0] * cols for _ in range(rows)]
    for i in range(1, rows):
        for j in range(1, cols):
            if first[i - 1] == second[j - 1]:
                dp[i][j] = dp[i - 1][j - 1] + 1
            else:
                dp[i][j] = max(dp[i - 1][j], dp[i][j - 1])
    return dp[-1][-1]


def knapsack(weights, values, capacity):
    """Return the maximum value achievable within the capacity using 0/1 knapsack DP."""
    item_count = len(weights)
    dp = [[0] * (capacity + 1) for _ in range(item_count + 1)]
    for i in range(1, item_count + 1):
        for current_capacity in range(capacity + 1):
            weight = weights[i - 1]
            value = values[i - 1]
            if weight > current_capacity:
                dp[i][current_capacity] = dp[i - 1][current_capacity]
            else:
                without_item = dp[i - 1][current_capacity]
                with_item = dp[i - 1][current_capacity - weight] + value
                dp[i][current_capacity] = max(without_item, with_item)
    return dp[item_count][capacity]


